@model KIS.App_Sources.Workspace

@{
    ViewBag.Title = ResAccountMgm.WorkspaceDetail.lblTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ResAccountMgm.WorkspaceDetail.lblTitle</h3>

@if (ViewBag.authR)
{
    if (Model != null && Model.id != -1)
    {
<script>
    $(document).ready(function () {
        console.log($("#txtmail").val());

        $(".btnInvite").click(function () {
                    console.log("Send invite...");
                    if ($("#frmws")[0].checkValidity() && $("#txtmail").val().length > 0) {
                        var mail = $("#txtmail").val();
                        console.log("Invite user " + mail);
                        $.ajax({
                            url: "@Url.Action("Invite", "Workspaces")",
                            type: 'POST',
                            data: {
                                workspace: @Model.id.ToString(),
                                mail: mail
                            },
                            success: function (result) {
                                console.log(result);
                            },
                            error: function (result) { alert("Error " + result); },
                            warning: function (result) { alert("Warning " + result); },
                        });
                    }
                    else {
                        console.log("Form invalid");
                        $("#frmws")[0].reportValidity();
                    }
        });

        $("#tblUsers").on("click", ".btnDeleteGroup", function () {
                var id = $(this).prop("id");
                console.log("Delete group " + id);
                var aid = id.split('_');
                if (aid.length == 2) {
                    var ids = aid[1].split(';');
                    if (ids.length == 2) {
                        var usrId = ids[0];
                        var groupId = ids[1];
                        if (usrId >= 0 && groupId >= 0) {
                    $.ajax({
                            url: "@Url.Action("DeleteUserAccountGroup", "Workspaces")",
                            type: 'POST',
                            data: {
                                workspace: @Model.id.ToString(),
                                userid: usrId,
                                groupid: groupId
                            },
                            success: function (result) {
                                    console.log(result);
                                    if (result == "1") {
                                    $("#dvUserGroup_" + usrId + ";" + groupId).remove();
                                    }
                                },
                            error: function (result) { alert("Error " + result); },
                            warning: function (result) { alert("Warning " + result); },
                        });
                        }
                    }
                }

            });

                //$("#frmAddGroup").hide();
                $("#tblUsers").on("click", ".btnAddGroup", function() {
                    var id = $(this).prop("id");
                    console.log("Add group - show panel");
                    var aid = id.split('_');
                    if (aid.length == 2) {
                        console.log("Inside");
                $("#frmAddGroup").modal('show');
                $("#addgroup_user").val(aid[1]);
                    }

                });

                $("#btnSaveGroup").click(function() {
                    var usrid = $("#addgroup_user").val();
                    var grpid = $("#addgroup_groups").val();
                    if (usrid >= 0 && grpid >= 0) {
                        console.log(usrid + " " + grpid);
                        $.ajax({
                            url: "@Url.Action("AddUserAccountGroup", "Workspaces")",
                            type: 'POST',
                            data: {
                                workspace: @Model.id.ToString(),
                                userid: usrid,
                                groupid: grpid
                            },
                            success: function (result) {
                                    console.log(result);
                                    if (result == "1") {
                                        window.location.href = window.location.href;
                                    }
                                },
                            error: function (result) { alert("Error " + result); },
                            warning: function (result) { alert("Warning " + result); },
                        });
                    }
                });


        });
</script>
        <div class="row-fluid">
            <div class="span12">
                <h4>@Model.Name</h4>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <h4>@ResAccountMgm.WorkspaceDetail.lblUserAccounts</h4>
                <table class="table table-striped table-condensed" id="tblUsers">
                    <thead>
                        <tr>
                            <th>@ResAccountMgm.WorkspaceDetail.lblUserAccountsTHName</th>
                            <th>@ResAccountMgm.WorkspaceDetail.lblUserAccountsTHEmail</th>
                            <th>@ResAccountMgm.WorkspaceDetail.lblUserAccountsTHGroups</th>
                            <th>@ResAccountMgm.WorkspaceDetail.lblUserAccountsTHAddGroup</th>
                            <th>@ResAccountMgm.WorkspaceDetail.lblUserAccountsTHLastLogin</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            Model.loadUserAccounts();
                            foreach (var m in Model.UserAccounts)
                            {
                                m.loadGroups(Model.id);
                                <tr>
                                    <td>@m.firstname @m.lastname</td>
                                    <td>@m.email.ToString()</td>
                                    <td>
                                        @foreach (var g in m.groups)
                                        {
                                            <div id="dvUserGroup_@m.id;@g.ID">
                                                @if (ViewBag.authGroupsW)
                                                {
                                                    <span class="material-icons btnDeleteGroup" id="btnDeleteGroup_@m.id;@g.ID" style="cursor: pointer;">delete</span>
                                                }
                                                @g.Nome
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (ViewBag.authGroupsW)
                                        {
                                            <span class="material-icons btnAddGroup" id="btnAddGroup_@m.id" style="cursor: pointer;">group_add</span>
                                        }
                                        </td>
                                    <td>@m.LastLogin.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        //@if (ViewBag.authGroupsW)
        //{
            <!-- Modal -->
            <div class="modal fade" id="frmAddGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @ResAccountMgm.WorkspaceDetail.lblChooseGroup
                            <input type="hidden" id="addgroup_user" value="" />
                            <select id="addgroup_groups">
                                <option value=""></option>
                                @{
                                    KIS.App_Sources.GroupList grpList = new KIS.App_Sources.GroupList();
                                    foreach (var g in grpList.Elenco)
                                    {
                                        <option value="@g.ID">@g.Nome</option>
                                    }
                                }
                            </select>
                            <td><span class="material-icons btnSaveGroup" id="btnSaveGroup" style="cursor: pointer;">save</span></td>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
                                   // }

            <div class="row-fluid">
                <div class="span12">
                    <h4>@ResAccountMgm.WorkspaceDetail.lblInviteUser</h4>
                    <form id="frmws">
                        @ResAccountMgm.WorkspaceDetail.lblInviteUserMail:&nbsp;<input type="email" id="txtmail" />
                        <span class="material-icons btnInvite" id="btnInvite" style="cursor: pointer;">save</span>
                    </form>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <h4>@ResAccountMgm.WorkspaceDetail.lblUserAccounts</h4>
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>@ResAccountMgm.WorkspaceDetail.lblUserAccountsTHEmail</th>
                                <th>@ResAccountMgm.WorkspaceDetail.lblSentInvitesTHSentDate</th>
                                <th>@ResAccountMgm.WorkspaceDetail.lblSentInvitesTHAcceptedDate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                Model.loadInvites();
                                foreach (var m in Model.Invites)
                                {
                                    var accDate = m.AcceptedDate > new DateTime(2000, 1, 1) ? m.AcceptedDate.ToString("dd/MM/yyyyy HH:mm:ss") : "";
                                    <tr>
                                        <td>@m.Email</td>
                                        <td>@m.SentDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td>@accDate</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="row-fluid">
                <div class="span12">
                    @ResAccountMgm.WorkspaceDetail.lblWsNotFound
                </div>
            </div>
        }
    }
    else
    {
        <div class="row-fluid">
            <div class="span12">
                @ResAccountMgm.WorkspaceDetail.lblNotAuthorized
            </div>
        </div>
    }
