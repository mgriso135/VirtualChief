@model IEnumerable<KIS.Areas.Quality.Controllers.NonCompliancesAnalysisController.CauseCost>

@if (ViewBag.authenticated)
{
    <h5>@ResAnalysis.CausesRiskList.lblTitle</h5>
    @ResAnalysis.CausesRiskList.lblRiskDesc<br />
    if (Model != null && Model.Count() > 0)
    {
        <div class="row-fluid">
            <div class="span12">
                <img id="imgCategoriesGraph" src="@Url.Action("CausesRiskGraph", "NonCompliancesAnalysis")?start=@ViewBag.start&end=@ViewBag.end" />
                <table class="table table-condensed table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@ResAnalysis.CausesRiskList.lblTHCauseName</th>
                            <th>@ResAnalysis.CausesRiskList.lblFrequency</th>
                            <th>@ResAnalysis.CausesRiskList.lblCost</th>
                            <th>@ResAnalysis.CausesRiskList.lblRisk</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>@m.CauseName</td>
                                <td>@m.frequency</td>
                                <td>@Math.Round(m.cost, 2)</td>
                                <td>@Math.Round(m.risk, 2)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
else
{
    <div></div>
}
