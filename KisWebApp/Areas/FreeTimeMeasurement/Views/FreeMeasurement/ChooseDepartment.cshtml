@model IEnumerable<KIS.App_Code.Reparto>

@{
    ViewBag.Title = ResFreeMeasurements.ChooseDepartment.lblTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ResFreeMeasurements.ChooseDepartment.lblTitle</h3>
@if(ViewBag.authW)
{
    <div class="row-fluid">
        <div class="span12">
            <table class="table table-striped table-hover">
                <thead></thead>
                <tbody>
                    @foreach(var m in Model)
                    {
                        <tr>
                            <td><a href="Execute?DepartmentId=@m.id"><span class="material-icons">search</span></a></td>
                            <td>@m.name</td>
                            <td>@m.description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row-fluid">
        <div class="span12">
            @ResFreeMeasurements.ChooseDepartment.lblTitle
        </div>
    </div>
}

