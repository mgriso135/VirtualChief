@model KIS.App_Sources.NonComplianceCause

@{
    ViewBag.Title = @ResNCCauses.Update.lblTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb hidden-phone">
    <li>
        <a href="~/Quality/Home/Index">
            @Resources.Shared.lblNavQuality</a><span class="divider"></span>
    </li>
    <li>
        <a href="~/Quality/NonCompliances/Index?stat=O&sortOrder=init">
            @Resources.Shared.lblNavNonCompliances</a><span class="divider"></span>
    </li>
    <li>
        <a href="~/Quality/NonComplianceCauses/Index">
            @Resources.Shared.lblNavNCCauses</a><span class="divider"></span>
    </li>
    <li>
        <a href="~/Quality/NonComplianceCauses/Create">
            @Resources.Shared.lblNavNCCausesUpd</a><span class="divider"></span>
    </li>
</ul>

<h3>@ResNCCauses.Update.lblTitle</h3>

@if (ViewBag.authenticated)
{
    if (ViewBag.ncCauseFound && Model != null)
    {
        <form method="post">
            <div class="row-fluid">
                <div class="span12">
                    <table>
                        <tr>
                            <td>@ResNCCauses.Update.lblName</td>
                            <td><input type="text" id="name" name="name" value="@Server.HtmlDecode(Model.Name)" required />
                        </tr>
                        <tr>
                            <td>@ResNCCauses.Update.lblDescription</td>
                            <td><textarea id="description" name="description">@Server.HtmlDecode(Model.Description)</textarea></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <button type="submit" style="border:0px;background:transparent;"><img src="~/img/iconSave.jpg" style="height:40px" /></button>
                                <button type="reset" style="border:0px;background:transparent;"><img src="~/img/iconUndo.png" style="height:40px" /></button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="row-fluid">
            <div class="span12">@ResNCCauses.Update.lblTypeNotFound</div>
        </div>
    }
}
else
{
    <div class="row-fluid">
        <div class="span12">@ResNCCauses.Update.lblNotLoggedIn</div>
    </div>
}