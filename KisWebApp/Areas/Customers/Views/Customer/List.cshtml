@model IEnumerable<KIS.App_Code.Cliente>

@{
    ViewBag.Title = ResCustomer.List.lblTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ResCustomer.List.lblTitle</h3>
<ul class="breadcrumb hidden-phone">
    <li>
        <a href="~/Customers/Customer/List">@ResCustomer.List.lblNav1</a><span class="divider"></span>
    </li>
</ul>

@if(ViewBag.Tenant!= null && ViewBag.Tenant.ToString().Length > 0 && (ViewBag.authR || ViewBag.authW))
{
<div class="row-fluid">
    <div class="span12">
        @if (ViewBag.authW)
        {
            <span class="material-icons">
                add
            </span>
            @ResCustomer.List.lblAddCustomer
        }
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        @if(Model.Count() > 0)
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@ResCustomer.List.lblTHID</th>
                                <th>@ResCustomer.List.lblTHBusinessName</th>
                                <th>@ResCustomer.List.lblTHVATNumber</th>
                                <th>@ResCustomer.List.lblTHIdentification</th>
                                <th>@ResCustomer.List.lblTHTown</th>
                                <th>@ResCustomer.List.lblTHProvince</th>
                                <th>@ResCustomer.List.lblTHState</th>
                                <th>@ResCustomer.List.lblTHPhone</th>
                                <th>@ResCustomer.List.lblTHEmail</th>
                            </tr>
                        </thead>
<tbody>
    @foreach(var m in Model)
                    {
    <tr>
        <td><span class="material-icons">edit</span></td>
        <td>@m.CodiceCliente</td>
        <td>@m.RagioneSociale</td>
        <td>@m.PartitaIVA</td>
        <td>@m.CodiceFiscale</td>
        <td>@m.Citta</td>
        <td>@m.Provincia</td>
        <td>@m.Stato</td>
        <td>@m.Telefono</td>
        <td>@m.Email</td>
    </tr>
                    }
</tbody>
                    </table>
                }
    </div>
</div>
        }
        else
        {
        <div class="row-fluid">
            <div class="span12">
                @ResCustomer.List.lblUserNotAuthorized
            </div>
        </div>
        }
